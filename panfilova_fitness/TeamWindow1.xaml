<Window x:Class="panfilova_fitness.TeamWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:panfilova_fitness"
        mc:Ignorable="d"
       Title="Команда" Height="600" Width="800">
    <Grid Background="#EDEDED">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <StackPanel Grid.Row="0" Background="#FFFBB1D9" Height="50">
            <TextBlock Text="КОМАНДА" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Тренеры -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Тренер 1 -->
            <StackPanel Grid.Column="0" Background="#FFC9C9C9" Margin="0,0,20,0" >
                <Ellipse Width="150" Height="150">

                </Ellipse>
                <TextBlock Text="БЕРСЕНЕВ РУСЛАН" FontSize="16" FontWeight="Bold" Foreground="#FF94647E" Margin="0,10,0,0"/>
                <TextBlock Text="Фитнес специализации:" Margin="0,10,0,0"/>
                <TextBlock Text="• Функциональные тренировки" Margin="0,5,0,0"/>
                <TextBlock Text="• Коррекция и снижение веса" Margin="0,5,0,0"/>
                <TextBlock><Run Text="• Силовые тренировки и набор "/><LineBreak/><Run Text="мышечной массы"/></TextBlock>
                <TextBlock Text="• Подготовка к соревнованиям" Margin="0,5,0,0"/>
                <TextBlock Text="• Сопровождение по питанию" Margin="0,5,0,0"/>
                <Button Content="ПОДРОБНЕЕ"  Width="150" Margin="0,35,0,0" Background="#FFF0B0DF"/>
            </StackPanel>

            <!-- Тренер 2 -->
            <StackPanel Background="#FFC9C9C9" Margin="253,0,15,0" Grid.ColumnSpan="2" >
                <Ellipse Width="150" Height="150">

                </Ellipse>
                <TextBlock Text="НОВИКОВ АЛЕКСЕЙ" FontSize="16" FontWeight="Bold" Foreground="#FF94647E" Margin="0,10,0,0"/>
                <TextBlock Text="Фитнес специализации:" Margin="0,10,0,0"/>
                <TextBlock Text="• Функциональные тренировки" Margin="0,5,0,0"/>
                <TextBlock Text="• Коррекция и снижение веса" Margin="0,5,0,0"/>
                <TextBlock Margin="0,5,0,0" Height="32"><Run Text="• Силовые тренировки и набор мышечной"/><LineBreak/><Run Text=" массы"/></TextBlock>
                <TextBlock Text="• Миофасциальный релиз" Margin="0,5,0,0"/>
                <TextBlock Text="• Стретчинг" Margin="0,5,0,0"/>
                <TextBlock Text="• Сопровождение по питанию" Margin="0,5,0,0"/>
                <Button Content="ПОДРОБНЕЕ" Width="150" Margin="0,10,0,0" Background="#FFF0B0DF"/>
            </StackPanel>

            <!-- Тренер 3 -->
            <StackPanel Grid.Column="2" Background="#FFC9C9C9" Margin="0,0,0,0">
                <Ellipse Width="150" Height="150">

                </Ellipse>
                <TextBlock Text="ЖИЧКИНА МАРГАРИТА" FontSize="16" FontWeight="Bold" Foreground="#FF94647E" Margin="0,10,0,0"/>
                <TextBlock Text="Фитнес специализации:" Margin="0,10,0,0"/>
                <TextBlock Text="• Функциональные тренировки" Margin="0,5,0,0"/>
                <TextBlock Text="• Коррекция и снижение веса" Margin="0,5,0,0"/>
                <TextBlock Margin="0,5,0,0"><Run Text="• Силовые тренировки и набор мышечной "/><LineBreak/><Run Text="массы"/></TextBlock>
                <TextBlock Text="• Миофасциальный релиз" Margin="0,5,0,0"/>
                <TextBlock Margin="0,5,0,0"><Run Text="• Тренировки во время беременности и "/><LineBreak/><Run Text="восстановление после родов"/></TextBlock>
                <Button Content="ПОДРОБНЕЕ" Width="150" Margin="0,15,0,0" Background="#FFFBB1D9"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>