<Window x:Class="panfilova_fitness.Registation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:panfilova_fitness"
        mc:Ignorable="d"
       Title="Вход в систему" Height="300" Width="400">
    <Grid Background="#EDEDED">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <StackPanel Grid.Row="0" Background="#FFFBB1D9" Height="50">
            <TextBlock Text="Вход в систему" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Форма входа -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Введите ваш логин" Margin="0,20,0,5" FontWeight="Bold"/>
            <TextBox Text ="Логин" Width="300"/>

            <TextBlock Text="Введите ваш пароль" Margin="0,10,0,5" FontWeight="Bold"/>
            <TextBox Text ="Пароль" Width="300" TextChanged="TextBox_TextChanged"/>

            <TextBlock Text="Забыли пароль?" Foreground="#FFFBB1D9" Margin="0,10,0,20" Cursor="Hand" FontWeight="Bold"/>

            <Button Content="Войти"  Width="150" Margin="0,0,0,20" Background="#FFC0B3B3" FontWeight="Bold" Foreground="#FF675656"/>
        </StackPanel>
    </Grid>
</Window>
